  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build mocks",
      "type": "dart",
      "command": "dart",
      "args": ["run", "build_runner", "build", "--delete-conflicting-outputs"]
    },
    {
      "label": "Run tests",
      "type": "dart",
      "command": "flutter",
      "args": ["test"],
      "presentation": {
        "clear": true
      }
    }
  ]
}
